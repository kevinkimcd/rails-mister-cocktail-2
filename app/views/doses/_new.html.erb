<div class="popup-form">
  <%= simple_form_for [cocktail, dose], html: { class: "new-dose-form" }  do |f| %>
    <%= f.association :ingredient, label: false, prompt: 'Select ingredient' %>
    <%= f.text_field :description, placeholder: "Amount" %><br>
    <%= f.submit "Add ingredient"%>
  <% end %>
</div>
