<div class="navbar">
  <div class="left-side"></div>
  <div class="center-side">
    <%= link_to image_tag('logo.svg', class:"logo"), cocktails_path %>
  </div>
  <div class="right-side">
  </div>
</div>

<div class="back-button">
  <%= link_to fa_icon("chevron-left", text: "Back"), cocktails_path, class:"back-button-icon" %>
</div>

<div class="show-body">
  <div class="new-cocktail-form">
    <%= simple_form_for @cocktail do |f| %>
      <h6>new cocktail</h6>
      <%= f.text_field :name, placeholder:"Name", class:"new-cocktail-name" %>
      <br>
      <br>
      <h6 id="photo-label">photo</h6>
      <%= f.input :photo, as: :file %>
      <script type="text/javascript">
        removePhotoLabel();
        function removePhotoLabel() {
          document.querySelector("#new_cocktail > div.form-group.file.optional.cocktail_photo > label").innerText = "";
        };
      </script>
      <%= f.submit "Create", class:"submit-button" %>
    <% end %>
  </div>
</div>
