<div class="navbar">
  <div class="left-side"></div>
  <div class="center-side">
    <%= link_to image_tag('logo.svg', class:"logo"), cocktails_path %>
  </div>
  <div class="right-side">
    <%= link_to "Add cocktail", new_cocktail_path, class:"new-cocktail" %>
  </div>
</div>

<div class="main-body">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-4 columns">
        <!-- TODO: validate the edited line below -->
        <% if cocktail.photo.attached? %>
          <% background_url = cl_image_path cocktail.photo.key, width: 440, height: 320, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/440x320/?cocktail' %>
        <% end %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path background_url, crop: :fill %>')">
          <%= link_to cocktail.name, cocktail_path(cocktail), class:"cocktail-link" %>
          <%= link_to "", cocktail_path(cocktail), class:"cocktail-card-link" %>
          <div class="trash-can">
            <%= link_to fa_icon("trash"), cocktail, method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' }, class:"delete-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
</div>
